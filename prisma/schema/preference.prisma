model UserPreferences {
  id                      String      @id @default(cuid())
  defaultPaymentAccountId String?
  currency                Currency?
  timeZone                String?
  timeFormat              TimeFormat?
  dateFormat              DateFormat?
  region                  String?
  language                Language    @default(ENGLISH)
  showBasicProfile        Boolean     @default(true)
  showContactDetails      Boolean     @default(false)
  userId                  String      @unique
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @updatedAt
  user                    users       @relation(fields: [userId], references: [id])
}

model NotificationPreference {
  id                          String                @id @default(cuid())
  category                    NotificationCategory
  notifyOnLoginActivity       Boolean               @default(true)
  notifyOnNewMessages         Boolean               @default(true)
  notifyPaymentInitiated      Boolean               @default(true)
  notifyPaymentSuccess        Boolean               @default(true)
  notifyPaymentFailed         Boolean               @default(true)
  notifyNewMaintenanceRequest Boolean               @default(true)
  notifyRequestStatusChange   Boolean               @default(true)
  notifyRequestMessage        Boolean               @default(true)
  notifyRequestResolved       Boolean               @default(true)
  notifyNewInvoice            Boolean               @default(true)
  notifyTenantMoveOut         Boolean               @default(true)
  notifyPropertyMatch         Boolean               @default(true)
  notifyNewInquiry            Boolean               @default(true)
  notifyNewSupportTicket      Boolean               @default(true)
  receiveMarketingEmails      Boolean               @default(true)
  channels                    NotificationChannel[]
  userId                      String
  createdAt                   DateTime              @default(now())
  updatedAt                   DateTime              @updatedAt
  users                       users                 @relation(fields: [userId], references: [id])

  @@unique([userId, category])
}

enum TimeFormat {
  H12
  H24
}

enum DateFormat {
  MM_DD_YYYY
  DD_MM_YYYY
  YYYY_MM_DD
}

enum Language {
  ENGLISH
  SPANISH
  FRENCH
  GERMAN
}

enum NotificationChannel {
  EMAIL
  SMS
  IN_APP
  PUSH
}

enum NotificationCategory {
  SECURITY
  COMMUNICATION
  ONLINE_PAYMENTS
  MAINTENANCE_REQUESTS
  MOVE_OUT
  PROPERTY_MATCH
  WEBSITE_INQUIRY
  SUPPORT_TICKET
  MARKETING_EMAILS
}
